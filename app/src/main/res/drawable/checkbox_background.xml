<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="#000" android:width="0dp" />
                    <corners android:radius="4dp" />
                    <solid android:color="#fff" />
                </shape>
            </item>
            <item android:drawable="@drawable/baseline_check_box_outline_blank_24" android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp" />
        </layer-list>
    </item>

    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="1dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/baseline_check_box_24" android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp" />
        </layer-list>
    </item>
</selector>