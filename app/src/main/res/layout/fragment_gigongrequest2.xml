<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/gigongrequest_body_padding"
    android:paddingRight="@dimen/gigongrequest_body_padding"
    android:paddingBottom="?attr/actionBarSize"
    tools:context=".ui.gigongrequest.GigongRequestFragmentPage2">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/gigongrequest_head"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket"
        android:textFontWeight="500"
        android:text="요청서를 작성해주세요"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gigongrequest_body_paddingTop"
        app:layout_constraintBottom_toTopOf="@+id/request2_nextbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="접수일"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/request2_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gmarket"
                    android:hint="접수일"
                    android:inputType="date"
                    android:textSize="@dimen/gigongrequest_body">

                </androidx.appcompat.widget.AppCompatEditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="차트번호"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/request2_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gmarket"
                    android:hint="차트번호"
                    android:inputType="date"
                    android:textSize="@dimen/gigongrequest_body">

                </androidx.appcompat.widget.AppCompatEditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="이름"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/request2_txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gmarket"
                    android:hint="이름"
                    android:inputType="text"
                    android:textSize="@dimen/gigongrequest_body">

                </androidx.appcompat.widget.AppCompatEditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="성별"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/request2_gender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border1"
                        android:fontFamily="@font/gmarket"
                        android:text="남"
                        android:textSize="@dimen/gigongrequest_body">

                    </androidx.appcompat.widget.AppCompatButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/request2_gender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border1"
                        android:fontFamily="@font/gmarket"
                        android:text="여"
                        android:textSize="@dimen/gigongrequest_body">

                    </androidx.appcompat.widget.AppCompatButton>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="당일여부"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/request2_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border1"
                        android:fontFamily="@font/gmarket"
                        android:text="당일"
                        android:textSize="@dimen/gigongrequest_body">

                    </androidx.appcompat.widget.AppCompatButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/request2_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border1"
                        android:fontFamily="@font/gmarket"
                        android:text="1박2일"
                        android:textSize="@dimen/gigongrequest_body">

                    </androidx.appcompat.widget.AppCompatButton>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="DR"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/request2_dr"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"
                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/gmarket"
                    android:hint="이름"
                    android:textSize="@dimen/gigongrequest_body">

                </androidx.appcompat.widget.AppCompatSpinner>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gmarket"
                    android:text="DH"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/gigongrequest_body_head" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/request2_dh"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"
                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/gmarket"
                    android:hint="이름"
                    android:textSize="@dimen/gigongrequest_body">

                </androidx.appcompat.widget.AppCompatSpinner>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:textSize="@dimen/gigongrequest_body_head"
        android:textColor="@color/white"
        android:id="@+id/request2_nextbtn"
        android:background="@drawable/border2"
        android:fontFamily="@font/gmarket"
        android:textFontWeight="400"
        android:text="다음"/>

</androidx.constraintlayout.widget.ConstraintLayout>