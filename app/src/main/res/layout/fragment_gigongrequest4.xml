<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?attr/actionBarSize"
    tools:context=".ui.gigongrequest.GigongRequestFragmentPage4">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/gigongrequest_head"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket"
        android:layout_marginLeft="@dimen/gigongrequest_body_padding"
        android:layout_marginRight="@dimen/gigongrequest_body_padding"
        android:textFontWeight="500"
        android:text="요청서를 작성해주세요"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gigongrequest_body_padding"
        android:paddingRight="@dimen/gigongrequest_body_padding"
        android:layout_marginTop="@dimen/gigongrequest_body_paddingTop"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/request4_nextbtn"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="바이트" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="대합치" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="지그" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="동공사진" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="지대치사진" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="쉐이드사진" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="당일 2nd OP" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="Gum Porcelain" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.75">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="Abut Margin" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/gr_check9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:gravity="left"
                        android:background="@drawable/checkbox_background"
                        android:button="@color/transfer">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/gigongrequest_body_head"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gmarket"
                        android:textFontWeight="400"
                        android:text="쉐이드" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/gr_Shade"
                        android:background="@drawable/custom_spinner_backgroundlayout2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp">

                    </androidx.appcompat.widget.AppCompatSpinner>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp"
                android:background="@drawable/border4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/request4_draw"
                    android:layout_width="match_parent"
                    android:layout_height="650dp">

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginBottom="15dp"
        app:fabSize="mini"
        android:src="@drawable/delete_48px"
        android:tooltipText="초기화"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/fb_eraser"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.76" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginBottom="15dp"
        app:fabSize="mini"
        android:src="@drawable/ink_eraser_48px"
        android:tooltipText="지우개"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/fb_paint"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.76" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginBottom="15dp"
        app:fabSize="mini"
        android:src="@drawable/palette_48px"
        android:tooltipText="색변경"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/fb_pen"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.76" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:fabSize="mini"
        android:src="@drawable/edit_48px"
        android:tooltipText="그리기"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/gigongrequest_body_padding"
        android:layout_marginRight="@dimen/gigongrequest_body_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:textSize="@dimen/gigongrequest_body_head"
        android:textColor="@color/white"
        android:id="@+id/request4_nextbtn"
        android:background="@drawable/border2"
        android:fontFamily="@font/gmarket"
        android:textFontWeight="400"
        android:text="다음"/>

</androidx.constraintlayout.widget.ConstraintLayout>