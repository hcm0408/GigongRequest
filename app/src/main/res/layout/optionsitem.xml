<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:background="@color/transfer"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    app:cardCornerRadius="0dp"
    app:rippleColor="#d2d2d2"
    tools:context=".ui.gigongrequest.OptionAdapter">

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1.05"
            android:id="@+id/toothNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_200"
            android:textSize="12sp"
            android:text="11">
        </TextView>

        <TextView
            android:layout_weight="0.95"
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:text="Indi Tray / Jig Bite">
        </TextView>

        <TextView
            android:layout_weight="1.03"
            android:id="@+id/option7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="4.0x4.5">
        </TextView>

        <TextView
            android:textAlignment="center"
            android:layout_weight="1.07"
            android:id="@+id/option6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:text="F/imp">
        </TextView>

        <TextView
            android:layout_weight="0.96"
            android:id="@+id/option1"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:text="Oneday Biotech">
        </TextView>

        <TextView
            android:layout_weight="0.91"
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:text="Oneday Biotech">
        </TextView>

        <TextView
            android:textAlignment="center"
            android:layout_weight="1.03"
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="O">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="TRIOS">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/option5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="Cement Type">
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>